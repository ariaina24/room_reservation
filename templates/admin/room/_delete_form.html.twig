<form method="post" action="{{ path('app_room_delete', {'id': room.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette salle ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
    <button class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition">
        🗑️ Supprimer
    </button>
</form>
