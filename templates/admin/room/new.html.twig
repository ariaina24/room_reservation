                {{ form_errors(form.capacity) }}
            </div>

            <div class="md:col-span-2">
                <label class="block text-sm font-semibold text-gray-700 mb-1">Localisation</label>
                {{ form_widget(form.localisation, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
                {{ form_errors(form.localisation) }}
