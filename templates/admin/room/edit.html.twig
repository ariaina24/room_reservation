{% extends 'admin/layout.html.twig' %}

{% block admin_content %}
<h1 class="text-3xl font-bold text-gray-800 mb-6">
    ‚úèÔ∏è Modifier la salle
</h1>

<div class="bg-white p-6 rounded-xl shadow-lg">
    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <div>
                {{ form_label(form.name, 'Nom de la salle', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'mt-1 w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                {{ form_label(form.capacity, 'Capacit√©', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.capacity, {'attr': {'class': 'mt-1 w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.capacity) }}
            </div>

            <div class="md:col-span-2">
                {{ form_label(form.localisation, 'Localisation', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.localisation, {'attr': {'class': 'mt-1 w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.localisation) }}
            </div>

            <div class="md:col-span-2">
                {{ form_label(form.description, 'Description de la salle', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'mt-1 w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div>
                {{ form_label(form.image, 'Nouvelle image', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.image, {'attr': {'class': 'mt-1 w-full p-2 border border-gray-300 rounded-lg shadow-sm'}}) }}
                {{ form_errors(form.image) }}
            </div>

            {% if room.image %}
                <div class="flex flex-col items-start">
                    <span class="text-sm font-medium text-gray-700 mb-2">Image actuelle :</span>
                    <img src="{{ asset('uploads/rooms/' ~ room.image) }}" alt="Image de la salle"
                         class="w-40 h-28 object-cover rounded border shadow">
                </div>
            {% endif %}
        </div>

        <div class="mt-8 flex flex-wrap gap-4">
            <button class="px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
                üíæ Mettre √† jour
            </button>

            <a href="{{ path('app_room_index') }}"
               class="px-6 py-2 bg-gray-200 text-gray-800 font-semibold rounded-lg hover:bg-gray-300 transition">
                üîô Retour √† la liste
            </a>
        </div>
    {{ form_end(form) }}

    <div class="mt-6">
        {{ include('admin/room/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
