{% extends 'admin/layout.html.twig' %}

{% block admin_content %}
<h1 class="text-2xl font-bold text-gray-800 mb-6">üè† Liste des Salles</h1>

<a href="{{ path('app_room_new') }}"
   class="inline-block mb-6 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">
    ‚ûï Ajouter une Salle
</a>

<div class="overflow-x-auto">
    <table class="min-w-full bg-white rounded shadow">
        <thead class="bg-gray-100 text-gray-700">
            <tr>
                <th class="p-4">Image</th>
                <th class="p-4 text-left">Nom</th>
                <th class="p-4 text-left">Capacit√©</th>
                <th class="p-4 text-left">Localisation</th>
                <th class="p-4 text-left">Description</th>
                <th class="p-4 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr class="border-t hover:bg-gray-50 transition">
                <td class="p-4">
                    {% if room.image %}
                        <img src="{{ asset('uploads/rooms/' ~ room.image) }}" alt="Image salle" class="w-20 h-20 object-cover rounded">
                    {% else %}
                        <span class="text-gray-400">Aucune image</span>
                    {% endif %}
                </td>
                <td class="p-4">{{ room.name }}</td>
                <td class="p-4">{{ room.capacity }}</td>
                <td class="p-4">{{ room.localisation }}</td>
                {% if room.description is not empty %}
                    <td class="p-4">{{ room.description }}</td>
                {% else %}
                    <td class="p-4 italic text-sm text-gray-500">{{ 'Aucune description' }}</td>
                {% endif %}
                <td class="p-4 space-x-2">
                    <a href="{{ path('app_room_show', {'id': room.id}) }}"
                       class="text-blue-600 hover:underline">üîç Voir</a>
                    <a href="{{ path('app_room_edit', {'id': room.id}) }}"
                       class="text-yellow-600 hover:underline">‚úèÔ∏è Modifier</a>
                    <form method="post" action="{{ path('app_room_delete', {'id': room.id}) }}" class="inline"
                          onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette salle ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.id) }}">
                        <button class="text-red-600 hover:underline">üóë Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="p-4 text-center text-gray-500">Aucune salle enregistr√©e.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
