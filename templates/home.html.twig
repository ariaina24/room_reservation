{% extends 'base.html.twig' %}

{% block title %}Accueil - RoomReservation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
{% endblock %}

{% block body %}

{% include 'include/nav.html.twig' %}

<section class="min-h-screen bg-gradient-to-br from-blue-50 to-white flex items-center justify-center pt-32 px-6">
    <div class="max-w-7xl w-full flex flex-col-reverse md:flex-row items-center gap-12">

        <!-- Texte -->
        <div class="w-full md:w-1/2 text-center md:text-left animate-fade-in-up">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-snug">
                Bienvenue <span class="text-blue-600 capitalize">{{ app.user.username }}</span> 🎉
            </h1>
            {% if is_granted('ROLE_ADMIN') %}
                <p class="text-lg text-gray-600 mb-8">
                    Accéder à l'interface administrateur pour gérer les salles et les reservations
                </p>

                <a href="{{ path('admin') }}"
                   class="inline-block bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transition duration-300">
                    🛠 Accéder au Dashboard Admin
                </a>
            {% else %}
                <p class="text-lg text-gray-600 mb-8">
                    Trouvez la salle parfaite pour vos réunions, formations ou événements. Simple, rapide et en toute confiance.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
                    <a href="{{ path('user_reservation') }}"
                       class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transition duration-300">
                        📅 Réserver une salle
                    </a>
                    <a href="{{ path('user_room_list') }}"
                       class="bg-white hover:bg-gray-100 border border-blue-600 text-blue-600 font-semibold py-3 px-6 rounded-lg shadow transition duration-300">
                        🏢 Explorer nos salles
                    </a>
                </div>
            {% endif %}
        </div>

        <!-- Image -->
        <div class="w-full md:w-1/2 animate-fade-in-right">
            <img src="{{ asset('assets/img/salle_reunion_bleu.jpg') }}"
                 alt="Illustration de salle"
                 class="w-full max-w-md mx-auto md:mx-0 rounded-lg shadow-lg">
        </div>

    </div>
</section>
{% endblock %}
